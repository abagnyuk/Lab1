@model FinancesMVC.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex align-items-center justify-content-center">
    <div style="background-color: rgba(255, 255, 255, 0.7) !important;" class="col-md-3 card p-3">
        <h2 class="text-center text-info">Login</h2>
        <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div class="mb-1">
                <label asp-for="UsernameOrEmail" class="control-label"></label>
                <input asp-for="UsernameOrEmail" class="form-control" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-1 form-check">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" /> @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <b><div asp-validation-summary="ModelOnly" class="text-danger"></div></b>
            }

            <div class="row" style="margin-top: 4%;">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="col-8">
                        <a asp-action="ForgotPassword" class="text-decoration-none float-start mt-2" asp-route-returnurl="@ViewData["ReturnUrl"]">Forgot password?</a>
                    </div>
                }
                <div class="col-8">
                    <a asp-action="Register" class="text-decoration-none float-start mt-2" asp-route-returnurl="@ViewData["ReturnUrl"]">Don't have an account?</a>
                </div>
            </div>
            <div style="margin-top:5%; align-content: center !important;" class="row">
                <div class="col-4 offset-3">
                    <input style="margin-left:50% !important;" type="submit" value="Login" class="btn btn-primary btn-md float-end" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
