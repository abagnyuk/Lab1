@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finances</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinancesMVC.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('@Url.Content("~/lib/backimage.jpg")') !important;
            background-size: cover;
        }
    </style>
</head>
<body>
    <header>
        <nav style="background-color: rgba(255, 255, 255, 0.1) !important; border-bottom: none !important;"
             class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (signInManager.IsSignedIn(User))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Categories" asp-action="Index">Finances</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Finances</a>

                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (signInManager.IsSignedIn(User))
                        {

                            <li style="margin-left:1%;" class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="SharedBudgets" asp-action="Index">Shared Budgets</a>
                            </li>

                            <li style="margin-left:1%;" class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Stats" asp-action="Index">Stats</a>
                            </li>
                        }
                        @* <li class="nav-item">
                        <b><a class="nav-link text-dark" id="profile" asp-area="" asp-controller="UserProfiles" asp-action="Index">Profile</a></b>
                        </li> *@

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: rgba(255, 255, 255, 0.5) !important; border: none !important;"
            class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Finances - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


