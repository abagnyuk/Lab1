﻿@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager

<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <b>
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity!.Name
                </a>
            </b>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li>
                    <a class="dropdown-item" asp-action="Index" asp-controller="UserProfile">
                        My profile
                    </a>
                    <a class="dropdown-item" asp-action="Logout" asp-controller="Account">
                        Logout
                    </a>
                </li>
            </ul>
        </li>

    }
    else
    {

        <li class="nav-item">
            <b><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a></b>
        </li>
        <li class="nav-item">
            <b><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a></b>
        </li>
    }
</ul>